<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="partner_level_form_view" model="ir.ui.view">
            <field name="name">partner.level.form.view</field>
            <field name="model">partner.level</field>
            <field name="arch" type="xml">
                <form string="Partner level">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <field name="loyalty_points" string="Loyalty Points: "/>
                            <field name="description"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="partner_level_tree_view" model="ir.ui.view">
            <field name="name">partner.level.tree.view</field>
            <field name="model">partner.level</field>
            <field name="arch" type="xml">
                <tree string="Partner level">
                    <field name="name"/>
                    <field name="loyalty_points"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>



        <record id="action_partner_level" model="ir.actions.act_window">
            <field name="name">Partner level</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">partner.level</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Level" id="menu_partner_level" parent="menu_management" action="action_partner_level" sequence="1"/>

    </data>
</odoo>